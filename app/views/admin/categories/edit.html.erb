<h1>Menus: Edit Section</h1>

<%= form_for(@category, url: admin_category_path) do |f| %>
  <div class="form-item">
    <%= f.label :name, class: 'label' %>
    <%= f.text_field :name, class: 'input--text' %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Submit', class: 'button' %>
    <%= link_to 'Cancel', admin_categories_path %>
  </div>
<% end %>
