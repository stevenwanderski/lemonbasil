<div class="admin-header">
  <h1><%= link_to 'Menus', admin_categories_path, class: 'link' %> >  Edit Category</h1>
</div>

<%= form_for(@category, url: admin_category_path) do |f| %>
  <div class="form-item">
    <%= f.label :name, class: 'label' %>
    <%= f.text_field :name, class: 'input--text' %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Submit', class: 'button button--submit' %>
    <%= link_to 'Cancel', admin_categories_path %>
    <%= link_to 'Delete', admin_category_path(@category), method: :delete, data: { confirm: 'Are you sure? This will also delete all menu items under this section!' }, class: 'link--danger' %>
  </div>
<% end %>
