<div class="admin-header">
  <h1>Menus: New Category</h1>
</div>

<%= form_for(@category, url: admin_categories_path) do |f| %>
  <div class="form-item">
    <%= f.label :name, class: 'label' %>
    <%= f.text_field :name, class: 'input--text', autofocus: true %>
  </div>

  <%= f.hidden_field :weight %>

  <div class="form-actions">
    <%= f.submit 'Submit', class: 'button button--submit' %>
    <%= link_to 'Cancel', admin_categories_path %>
  </div>
<% end %>
