<%= form_for(@category, url: url) do |f| %>
  <div class="form-item">
    <%= f.label :name, class: 'label' %>
    <%= f.text_field :name, class: 'input--text required' %>
  </div>

  <div class="form-item">
    <%= f.label :description, class: 'label' %>
    <%= f.text_area :description, class: 'input--textarea' %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Save', class: 'button button--submit' %>

    <button data-modal-close class="link">
      Cancel
    </button>

    <% if @category.persisted? %>
      <%= link_to 'Delete',
          admin_client_menu_category_path(@client_menu, @category),
          class: 'link link--danger',
          data: {
            confirm: 'Are you sure?',
            turbo_method: :delete
          }
      %>
    <% end %>
  </div>
<% end %>

<script>
  $('.edit_client_menu_category, .new_client_menu_category').validate();
</script>
