<%= form_for(@staple_category, url: url) do |f| %>
  <div class="form-item">
    <%= f.label :name, class: 'label' %>
    <%= f.text_field :name, class: 'input--text required', autofocus: true %>
  </div>

  <%= f.hidden_field :client_menu_id %>

  <div class="form-actions">
    <%= f.submit 'Save', class: 'button button--submit' %>

    <button data-modal-close class="link">
      Cancel
    </button>

    <% if @staple_category.persisted? %>
      <%= link_to 'Delete',
          admin_client_menu_staple_category_path(@client_menu, @staple_category),
          class: 'link link--danger',
          data: {
            confirm: 'Are you sure?',
            turbo_method: :delete
          }
      %>
    <% end %>
  </div>
<% end %>

<script>
  $('.edit_staple_category, .new_staple_category').validate();
</script>
