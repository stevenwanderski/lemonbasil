<div class="admin-header">
  <h1>Edit Instruction</h1>
</div>

<%= form_for(@meal, url: admin_instruction_path(@meal)) do |f| %>
  <%= render 'form', f: f %>

  <div class="form-actions">
    <%= f.submit 'Submit', class: 'button button--submit' %>
    <%= link_to 'Cancel', admin_instructions_path %>
    <%= link_to 'Delete', admin_instruction_path(@meal), method: :delete, data: { confirm: 'Are you sure?' }, class: 'link--danger' %>
  </div>
<% end %>
