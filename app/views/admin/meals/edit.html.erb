<div class="admin-header">
  <h1>Edit Meal</h1>
</div>

<%= form_for([:admin, @meal]) do |f| %>
  <div class="form-item">
    <%= f.label :name, class: 'label' %>
    <%= f.text_field :name, class: 'input--text', autofocus: true %>
  </div>

  <div class="form-item">
    <%= f.label :instructions, class: 'label' %>
    <%= f.text_area :instructions, class: 'input--textarea' %>
  </div>

  <div class="form-item">
    <p class="hint">
      <a href="https://www.markdownguide.org/cheat-sheet/" target="_blank">
        <strong>💁</strong> Click here to see formatting tips!
      </a>
    </p>
  </div>


  <div class="form-actions">
    <%= f.submit 'Submit', class: 'button button--submit' %>
    <%= link_to 'Cancel', admin_meals_path %>
    <%= link_to 'Delete', admin_meal_path(@meal), method: :delete, data: { confirm: 'Are you sure?' }, class: 'link--danger' %>
  </div>
<% end %>
