<div class="admin-header">
  <h1>Edit Meal</h1>
</div>

<%= form_for([:admin, @meal]) do |f| %>
  <%= render 'form', f: f %>

  <div class="form-actions">
    <%= f.submit 'Submit', class: 'button button--submit' %>
    <%= link_to 'Cancel', admin_meals_path %>
    <%= link_to 'Delete', admin_meal_path(@meal), method: :delete, data: { confirm: 'Are you sure?' }, class: 'link--danger' %>
  </div>
<% end %>
