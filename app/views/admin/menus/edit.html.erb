<h1>Menus: New Item</h1>

<%= form_for(@menu, url: admin_menu_path(@menu)) do |f| %>
  <div class="form-item">
    <%= f.label :name, class: 'label' %>
    <%= f.text_field :name, class: 'input--text' %>
  </div>

  <div class="form-item">
    <%= f.label :description, class: 'label' %>
    <%= f.text_area :description, class: 'input--text' %>
  </div>

  <div class="form-item">
    <%= f.label :category_id, class: 'label' %>
    <%= f.select :category_id, Category.all.map { |c| [c.name, c.id] }, {}, class: 'input--select' %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Submit', class: 'button' %>
    <%= link_to 'Cancel', admin_menus_path %>
    <%= link_to 'Delete', admin_menu_path(@menu), method: :delete, data: { confirm: 'Are you sure?' }, class: 'link--danger' %>
  </div>
<% end %>
