<div class="page">
  <p>White dates available, gray dates not available. Thursday - Sunday reserved for dinner parties & brunches.</p>
</div>

<div id="calendar"></div>

<script type="text/javascript">
  const element = document.getElementById('calendar');

  this.calendar = new FullCalendar.Calendar(element, {
    initialView: 'dayGridMonth',
    headerToolbar: {
      start: 'title',
      center: '',
      end: 'prev,next'
    },
    eventSources: [
      {
        url: '/api/events'
      }
    ]
  });

  this.calendar.render();
</script>
