<%= render 'pages/home/contact' %>
<%= render 'pages/home/footer' %>

<script>
  $(window).on('scroll', function(event) {
    if ($(this).scrollTop() > 200) {
      $('#header-fixed').removeClass('-translate-y-20');
    } else {
      $('#header-fixed').addClass('-translate-y-20');
    }
  });
</script>