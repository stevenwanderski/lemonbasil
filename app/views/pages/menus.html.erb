<h1>Menus</h1>

<div class="menus">
  <ul class="menu-nav">
    <li data-menu-category="salad" class="active">Salads</li>
    <li data-menu-category="meat">Meat Entrees</li>
    <li data-menu-category="vegetable">Veggie Entrees</li>
    <li data-menu-category="tacos">Tacos</li>
    <li data-menu-category="pizza">Pizzas</li>
    <li data-menu-category="sandwiches">Sandwiches</li>
    <li data-menu-category="sides">Sides</li>
  </ul>

  <div class="menu-items">
    <% @menus.each do |menu| %>
      <div class="menu-item" data-menu-category="<%= menu.category %>">
        <div class="name">
          <%= menu.name %>
        </div>

        <div class="description">
          <%= menu.description %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script type="text/javascript">
  $('.menu-nav li').on('click', function(event) {
    var category = $(this).data('menu-category');

    $('.menu-nav li').removeClass('active');
    $(this).addClass('active');

    $('.menu-item').hide();
    $('.menu-item[data-menu-category="' + category + '"]').show();
  });
</script>
