<h1>Menus</h1>

<div class="menus">
  <ul class="menu-nav">
    <% @categories.each_with_index do |category, index| %>
      <li data-menu-category="<%= category.id %>">
        <%= category.name %>
      </li>
    <% end %>
  </ul>

  <div class="menu-items">
    <% @menus.each do |menu| %>
      <div class="menu-item" data-menu-category="<%= menu.category_id %>">
        <div class="name">
          <%= menu.name %>
        </div>

        <div class="description">
          <%= menu.description %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script type="text/javascript">
  var firstId = $('.menu-nav li').first().data('menu-category');
  showSection(firstId);

  $('.menu-nav li').on('click', function(event) {
    var category = $(this).data('menu-category');
    showSection(category)
  });

  function showSection(id) {
    $('.menu-nav li').removeClass('active');
    $('.menu-nav li[data-menu-category="' + id + '"]').addClass('active');

    $('.menu-item').hide();
    $('.menu-item[data-menu-category="' + id + '"]').show();
  }
</script>
